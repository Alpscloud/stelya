.aside
	flex 1
	margin-left 80px
	width 100%
	max-width 520px
	&-block
		margin-bottom 60px
		&:last-child
			margin-bottom 0
			
		&__title
			text-transform uppercase
			font 24px $CMed
			color $dark-text-color
			margin-bottom 40px
			
	&-articles
		margin-bottom 30px
			
	&-article
		margin-bottom 30px
		font-size 16px
		&:last-child
			margin-bottom 0
			
		&__title
			text-transform uppercase
			font 18px $CMed
			margin-bottom 15px
			a
				color $dark-text-color
				&:hover
					color $secondary-color