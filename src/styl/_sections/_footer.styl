.footer
	background-color $footer-bg
	position relative
	color $basic-white-color
	&:before
		pseudo()
		position absolute
		bottom 0
		right 0
		width 900px
		height 376px
		background url('../img/backgrounds/decor/footer.png') no-repeat / contain
	.container
		position relative
		z-index 2
		
	&__title
		text-transform uppercase
		font 30px $CMed
		margin-bottom 30px
		line-height 35px
	&__subtitle
		font-size 16px
		opacity .4
		margin-bottom 70px
		
	&__contacts
		opacity .75
		margin-bottom 30px
		p
			margin-bottom 20px
			&:last-child
				margin-bottom 0
				
	.socials
		margin-bottom 30px
		&__link
			svg
				fill $basic-white-color
	
	.scroll-link
		position absolute
		top 80px
		right 60px
		transform rotate(-180deg)
		opacity .6
		svg
			fill $basic-white-color
		&__circle
			stroke $basic-white-color
		&:hover
			opacity 1
			
	&__col
		&--title
			font 20px $CMed
			text-transform uppercase
			margin-bottom 50px
			
.footer-nav
	ul
		li
			margin-bottom 14px
			&:last-child
				margin-bottom 0
		a
			color $basic-white-color
			opacity .4
			&:hover
				opacity 1
			
.copyright
	margin-top 90px
	font-size 14px
	opacity .4
	
.subscribe
	margin-top 120px
	&-form
		max-width 360px