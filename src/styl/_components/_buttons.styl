.btn
	display inline-block
	position relative
	font 14px $Bold
	text-transform uppercase
	line-height 1
	text-align center
	color $basic-white-color
	border 2px solid $accent-color
	letter-spacing 0.01em
	transition all .17s ease-in-out
	backface-visibility hidden
	width 100%
	max-width 300px
	&:after
		pseudo()
		position absolute
		vertical-center()
		width 80px
		height 2px
		right -60px
		z-index 1
		background-color $accent-color
		will-change transform
		transition transform .17s ease-in-out
	span
		display block
		width 100%
		height 100%
		overflow hidden
		padding 26px 15px
		position relative
		&:before
			pseudo()
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-color $accent-color
			will-change transform
			transition transform .17s ease-in-out
			z-index -1
		
		
	&:hover
		color $accent-color
		&:after
			transform translate(-7px, -50%)
		span
			&:before
				transform translateY(-102%)
	
	&-wide
		width 100%
		max-width 100%
	

		
	&-close
		display inline-block
		width 20px
		height 20px
		background url('../img/icons/svg/close-ic.svg') center center no-repeat
		background-size 20px 20px
		
	&-search
		&::-ms-clear
			display none 
			width 0
			height 0
		&::-ms-reveal
			display none 
			width 0
			height 0
		
		&::-webkit-search-decoration,
		&::-webkit-search-cancel-button,
		&::-webkit-search-results-button,
		&::-webkit-search-results-decoration
			display none
		
	&-top
		display none
		border-radius 50%
		width 40px
		height 40px
		position fixed
		right 30px
		bottom 30px
		background-color $accent-color
		z-index 10
		text-align center
		transition all .17s ease-in-out
		box-shadow 0px 0px 13px 0px rgba($basic-black-color, 0.21)
		&:after
			content ''
			display inline-block
			position absolute
			top 15px
			left 10px
			width 20px
			height 20px
			transform rotate(-45deg)
			border-top 1px solid $basic-black-color
			border-right 1px solid $basic-black-color
			transition all .23s ease-in-out
		&:hover
			background-color $basic-black-color
			transform scale(1.1)
			box-shadow 0px 0px 13px 0px rgba($accent-color, 0.21)
			&:after
				border-top 1px solid $accent-color
				border-right 1px solid $accent-color
				


	&-hamburger
		display inline-block
		flex none
		width 75px
		height 75px
		border-radius 50%
		background-color $secondary-color
		position relative
		transition background-color .17s ease-in-out
		margin-bottom 10px
		&__line
			width 25px
			height 2px
			background-color $basic-white-color
			display block
			margin 6px auto
			transition all 0.3s ease-in-out	
		&:hover
			background-color $secondary-hover-color
		&.is-active
			background-color $basic-white-color
			span
				background-color $secondary-color
				&:nth-child(1)
					transform translateY(4px) rotate(45deg)
				&:nth-child(2)
					transform translateY(-4px) rotate(-45deg)
					
	&-callback
		display inline-block
		position relative
		width 75px
		height 75px
		border-radius 50%
		background-color $accent-color
		svg
			display block
			width 23px
			height 23px
			position absolute
			position-center()
			fill $basic-white-color
			transition fill .17s ease-in-out
		&:hover
			background-color $accent-hover-color
		&.is-active
			svg
				opacity 0
			&:before
				opacity 1
		&:before
			pseudo()
			position absolute
			position-center()
			width 20px
			height 20px
			background url('../img/icons/svg/callback-close.svg') no-repeat / contain
			transition opacity .17s ease-in-out
			opacity 0
			
		