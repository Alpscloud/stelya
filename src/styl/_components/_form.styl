input[type="search"]
	appearance none
	-webkit-appearance none			

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	appearance none
	-webkit-appearance none
	backface-visibility hidden
	transform translate3d(0,0,0)




.form
	&-block
		background-color $basic-white-color
		box-shadow 0px 10px 50px 0px rgba(0, 47, 110, 0.15)
		padding 60px
	&__title
		text-transform uppercase
		color $dark-text-color
		font 32px $CMed
		margin-bottom 35px
		text-align center
	&__wrapper
		position relative
		z-index 2
		margin-top -280px
		margin-bottom $gutter-bottom
		
	&__notice
		color $light-text-color
		font-size 16px
		margin-top 28px
		a
			color rgba($secondary-color, .5)
			font-family $Med
			&:hover
				color $secondary-color
		
	&-input
		display block
		width 100%
		padding 0 0 25px 0
		text-align left
		background-color $light-color
		border-bottom 2px solid $input-border-color
		font 16px $Reg
		color $dark-text-color
		&:hover,
		&:focus
			border-color $accent-color
		
			

			
	&-group
		position relative
		margin-bottom 50px
		&:last-child
			margin-bottom 0
			
		&__label
			display inline-block
			margin-bottom 5px
			
	&-textarea
		min-height 200px
	

.form-groups__row
	margin 0 auto
	max-width 1170px
	.form-group
		margin-bottom 0
		display inline-block

.form-group
	&__label
		display block
		position relative
		margin-bottom 0
		&--text
			display inline-block
			position absolute
			color $text-color
			transition all .17s ease-in-out
			pointer-events none
			left 0
			font 18px $Reg
			top 2px
		
		&.is-error
			.form-group__label--text
				top -17px
				font-size 12px
				color $error-color
			.form-group__error
				opacity 1
				visibility visible
				
			input
				border-color $error-color
				
		&.is-active
			.form-group__label--text
				top -17px
				font-size 12px
				
	&__error
		display inline-block
		position relative
		opacity 0
		top 0
		left 0
		position absolute
		visibility hidden
		pointer-events none
		font 18px $Reg
		color $error-color

.form-input__email
	display block
	background-color #264e84
	padding 30px 90px 30px 30px
	color $basic-white-color
	font 18px $Reg
	width 100%
	&::-webkit-input-placeholder
		font 18px $Reg
		color rgba($basic-white-color, .4)
	&::-moz-placeholder
		font 18px $Reg
		color rgba($basic-white-color, .4)
	&:-moz-placeholder
		font 18px $Reg
		color rgba($basic-white-color, .4)
	&:-ms-input-placeholder
		font 18px $Reg
		color rgba($basic-white-color, .4)
		


.form-group
	&__wrapper
		margin-bottom 30px
		.form-group
			height 100%
			display flex
			flex-direction column
			justify-content flex-end
			&.is-error
				.form-group
					&__label
						color $error-color
					&__error--default
						opacity 1
						visibility visible
				
				.form-input--default
					border-color $error-color
					
	&__label
		color $light-text-color
		font-size 16px
		margin-bottom 12px
		transition color .17s ease-in-out
		
	&__error--default
		display inline-block
		position absolute
		left 0
		top 100%
		color $error-color
		font-size 14px
		transition all .17s ease-in-out
		opacity 0
		visibility hidden
		
.form-input
	&--default
		background-color $basic-white-color
		display block
		width 100%
		border 1px solid transparent
		font 16px $Reg
		color $dark-text-color
		padding 20px
		&:hover,
		&:focus
			border-color $accent-color
			
.request-form
	.form__notice
		margin-top 0
		margin-bottom 25px
		
.form-select__wrapper
	position relative
	&:after
		pseudo()
		position absolute
		right 15px
		vertical-center()
		z-index 1
		pointer-events none
		width 18px
		height 9px
		background url('../img/icons/svg/select.svg') no-repeat
	
.form-select
	-webkit-appearance none
	-moz-appearance none
	appearance none