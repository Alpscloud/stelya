.popup 
	position fixed
	position-center()
	z-index 90
	width 100%
	height 100%
	display none
	&__overflow
		position absolute
		left 0
		top 0
		width 100%
		backface-visibility hidden
		-webkit-backface-visibility hidden
		height 100%
		overflow auto
		box-sizing border-box
		-webkit-overflow-scrolling touch
		z-index 105
		background-color rgba($popup-overlay-bg, $popup-overlay-opacity)
		padding 10px
		text-align center
		white-space nowrap
		&:before
			pseudo()
			vertical-align middle
			width 0
			height 100%
	&__body
		width 100%
		max-width 570px
		background-color $popup-body-bg
		padding 60px
		display inline-block
		vertical-align middle
		position relative
		white-space normal
		text-align left
		
		.form__notice
			text-align left
		
	&__title
		text-transform uppercase
		color $dark-text-color
		text-align left
		font 30px $CMed
		margin-bottom 50px
		

		
	.btn-close
		position absolute
		top 10px
		right 10px
		
.popup-thanks
	.popup__body
		background-color $basic-white-color
		max-width 520px
		padding 55px
		text-align center
		
	.popup__title
		text-align center
		margin-bottom 30px
		
	img
		width auto
		margin-bottom 40px
		

.fullscreen-popup
	position fixed
	top 0
	left 0
	width 100%
	height 100vh
	overflow-x hidden
	overflow-y auto
	z-index 5
	transition all .17s ease-in-out
	opacity 0
	visibility hidden
	pointer-events none
	&.is-opened
		opacity 1
		visibility visible
		pointer-events auto
	
	&__row
		margin-left -60px
		margin-right -60px
	&:before
		pseudo()
		position fixed
		top 0
		left 0
		width 50%
		bottom 0
		background-color $color-bg
	&:after
		pseudo()
		position fixed
		bottom 0
		left 0
		width 800px
		height 336px
		background url('../img/backgrounds/decor/bottom.png') no-repeat / contain
	.container
		position relative
		z-index 2
		
	&__col
		position relative
		padding 120px 60px 200px 60px
		
		.socials
			position absolute
			bottom 80px
			left 60px
			

