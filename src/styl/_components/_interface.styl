.languages
	position relative
	width 75px
	margin-top 10px
	&.is-active
		li.current-lang 
			a
				border-color $dark-text-color
				color $dark-text-color
	li
		display block
		transition all .17s ease-in-out
		&:last-child
			position absolute
			top 100%
			padding-top 10px
			margin-top 10px
			transition all .17s ease-in-out
			opacity 0
			visibility hidden
			pointer-events none
		&.current-lang
			a
				border-color $dark-text-color
				background-color transparent
				color $dark-text-color
				&:hover
					border-color $basic-white-color
	a
		flex-col-center()
		width 75px
		height 75px
		border-radius 50%
		border 2px solid $accent-color
		background-color  $accent-color
		text-transform uppercase
		color $basic-white-color
		font 16px $Bold
		&:hover
			background-color $accent-hover-color
			color $basic-white-color
			border-color $accent-hover-color
	
	&:hover
		li.current-lang
			a
				background-color $basic-white-color
				color $dark-text-color
				
		li:last-child
			opacity 1
			visibility visible
			pointer-events auto
			margin-top 0
			

.socials
	font-size 0
	white-space nowrap
	height 20px
	&__item
		display inline-block
		margin-right 30px
		&:last-child
			margin-right 0
	&__link
		display block
		width 20px
		height 20px
		opacity .6
		svg
			svg()
			fill $secondary-color
		&:hover
			opacity 1
			

.scroll-link
	display inline-block
	width 77px
	height 77px
	position absolute
	right 30px
	z-index 2
	bottom 81.5px
	svg
		display block
		width 100%
		height 100%
		fill $dark-text-color
		
	&__circle
		fill-opacity 0
		stroke $dark-text-color
		stroke-linejoin round
		stroke-width 2px
	&__arrow
		fill-rule evenodd
		
	&:hover
		opacity .75



.fancy-link
	display block
	position relative
	overflow hidden
	&:before,
	&:after
		pseudo()
		position absolute
		transition all .17s ease-in-out
		opacity 0
	&:before
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba($popup-overlay-bg, .75)
		transform translateY(102%)
		z-index 1
	&:after
		position-center()
		z-index 1
		width 40px
		height 40px
		margin-top 15px
		background url('../img/icons/svg/portfolio_zoom.svg') no-repeat / contain
	&:hover
		&:before
			transform translateY(0)
			opacity 1
		&:after
			margin-top 0
			opacity 1
			


.page-permalink
	display inline-block
	position relative
	text-transform uppercase
	color $secondary-color
	letter-spacing 0.1em
	padding-right 50px
	font 14px $Bold
	line-height 1
	svg
		display block
		position absolute
		vertical-center()
		right 0
		width 31px
		height 24px
		fill $secondary-color
		margin-top -2px
		transition transform .17s ease-in-out
	&:hover
		svg
			transform translate(-5px, -50%)